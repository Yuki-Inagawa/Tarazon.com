<header>
<%= render partial: "/layouts/header"%>
</header>
  <div class="create">

  <%= form_for @product do |f| %>
  <%= f.label "商品名" %>
  <%= f.text_field :title, class: "input", placeholder:"商品名を入力してください" %>
  <div class="image">
  <%= f.label "商品写真" %>
  <%= f.file_field :image, class:"input"%>
  </div>
  <div class="price">
  <%= f.label "価格" %>
  <%= f.number_field :price %>円
  </div>
  <div class="description">
  <%= f.label "詳細" %>
  <%= f.text_area :description,class: "des" %>
  </div>
  <%= f.submit "出品", class: "btn btn-warning" %>
  <% end %>

  </div>
    
  

<%= render partial: "/layouts/footer"%>